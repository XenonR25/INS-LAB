{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "C/C++: g++ build active file",
			"type": "shell",
			"command": "g++",
			"args": [
				"-g",
				"${file}",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe"
			],
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"label": "C/C++: Run active file",
			"type": "shell",
			"command": "${fileDirname}\\${fileBasenameNoExtension}.exe",
			"group": "test"
		}
	]
}